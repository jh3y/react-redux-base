@import '_variables.styl'

/**
  * Todo component styling
*/
.todo
  background    $yellow
  padding       20px 10px 10px
  max-width     320px
  border-radius 4px
  box-shadow    2px 2px 6px 0px #000
  position      relative
  text-align    center

  &__description--edit
  &__title--edit
    border     none
    width      100%
    background darken($yellow, 30%)
    text-align center

  &__title--edit
  &__title
    font-size  24px
    margin     10px auto

  &__delete
    position      absolute
    top           4px
    right         4px
    background    transparent
    border        none
    border-radius 100%
    font-size     18px
    cursor        pointer

    &:hover
    &:active
      background rgba(255, 255, 255, .85)
