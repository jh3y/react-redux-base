@import '../../../style/_variables.styl';


/**
  * Header component styling
  * Demonstrates importing of style variables
*/
.header
  background  $primary
  color       $white
  position    relative
  height      60px
  line-height 60px

  &-title
    padding 0 10px
    margin  0

    &__link
      color   $white

  &-nav
    position absolute
    right 0
    top   0

    &__link
      color  $white
      margin  0 10px
      padding 4px
      transition all .25s ease

      &--active
        border-bottom 2px solid $white

      &:hover
        background $white
        color      $primary
