/* import vendor styling in the base styling here */
@import '~normalize.css'

/* import any globals */
@import '_variables.styl'


/* base styling */
*
  box-sizing border-box

body
  background #eee
  color      #111
  margin     0
  padding    0


a
  text-decoration none
  color           auto
  cursor          pointer

/* generic styling that would be better structured in a proper project */
.app
  position   relative
  min-height 600px

  &--loading
    &:after
    &:before
      content ''
      display block
      border-radius 100%
      position absolute
      top 50%
      left 50%
      z-index 9999

    &:before
      height 40px
      width  40px
      margin-top -20px
      margin-left -20px
      border 4px solid $yellow
      border-right 4px solid transparent
      border-top   4px solid transparent
      border-bottom 4px solid transparent
      animation spin 1s infinite linear

    &:after
      height 50px
      width  50px
      margin-top -25px
      margin-left -25px
      border 4px solid $primary
      border-bottom 4px solid transparent
      border-top 4px solid transparent
      border-left 4px solid transparent
      animation spin 1s infinite linear reverse

@keyframes spin
  from
    transform rotate(0deg)
  to
    transform rotate(360deg)

.todos .todo
  margin 0 auto 30px auto


.todos
.create
  padding 20px
  text-align center
  min-height 400px
  position relative

  &__title
    margin 0 0 30px
